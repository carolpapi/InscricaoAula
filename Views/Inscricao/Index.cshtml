@model InscricaoAula.Models.Inscricao
@{
    ViewData["Title"] = "Inscrição";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">

            <div class="content-card">

                <div class="text-center mb-4">
                    <h1 class="display-4">@ViewBag.NomeAula</h1>
                    <p class="lead-subtitle">um papo sobre qualidade :)</p>
                    <p class="lead-data-destaque">
                        <strong>Quando:</strong> @ViewBag.DataAula
                    </p>
                </div>

                <div class="mb-4">
                    <h3 class="border-bottom border-secondary pb-2">Sobre esta aula</h3>
                    <p>
                        Esta é uma aula focada em demonstrar os principais conceitos de testes de software.
                        Vamos explorar na prática como aprender o que testar,
                        técnicas de testes e tudo sobre qualidade de software.
                        Vem comigo!
                    </p>
                </div>

                <hr class="border-secondary" />

                @if (ViewBag.VagasRestantes > 0)
                {
                    <h3 class="text-center mb-3">Vagas Restantes: @ViewBag.VagasRestantes de @ViewBag.MaxVagas</h3>

                    <form asp-action="Inscrever" method="post">
                        @Html.AntiForgeryToken() <div class="form-group mb-3">
                            <label asp-for="NomeParticipante" class="control-label">Seu nome completo</label>
                            <input asp-for="NomeParticipante" class="form-control form-control-lg" placeholder="Digite seu nome" />
                            <span asp-validation-for="NomeParticipante" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EmailParticipante" class="control-label">Seu melhor email</label>
                            <input asp-for="EmailParticipante" class="form-control form-control-lg" placeholder="exemplo@email.com" />
                            <span asp-validation-for="EmailParticipante" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Quero me inscrever!" class="btn btn-primary w-100 btn-lg" />
                        </div>
                    </form>
                }
                else
                {
                    <div class="text-center">
                        <h3 class="text-danger">Que pena! As vagas para esta aula estão esgotadas :(</h3>
                    </div>
                }

                @if (TempData["MensagemSucesso"] != null)
                {
                    <div class="alert alert-success mt-3" role="alert">
                        @TempData["MensagemSucesso"]
                    </div>
                }

                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @TempData["MensagemErro"]
                    </div>
                }

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}